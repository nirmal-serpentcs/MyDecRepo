<?xml version="1.0" ?>
<odoo>
    <template id="portal_workorder_single" name="Portal Workorder">
        <div class="o_mrp_display_record border card rounded m-0 mb-2">
            <div class="card-header" barcode_trigger="pause">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0 text-truncate">WH/MO/00002</span>
                    <small class="rounded-pill px-2 text-nowrap text-bg-danger">
                        <span raw-value="to_close">To Close</span>
                    </small>
                </div>
                <div class="d-flex justify-content-between flex-wrap" style="min-height: 25px;">
                    <div class="o_finished_product mt-auto mb-0 d-flex mw-100">
                        <span class="text-truncate me-1">[FURN_9666] Table - </span>
                        <span class="text-nowrap">1 / 1<span class="ms-1">Unit</span>
                        </span>
                    </div>
                    <div class="pt-1"></div>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="o_mrp_record_line list-group-item d-flex justify-content-between align-items-center gap-2 flex-wrap o_longpressable text-muted">
                    <span class="flex-grow-1">
                        <span class="me-1">TImepass</span>
                        <span></span>
                    </span>
                    <button class="btn btn-lg pass fa fa-check px-0 text-success"></button>
                </li>
                <li class="o_mrp_record_line list-group-item d-flex justify-content-between align-items-center gap-2 flex-wrap o_longpressable text-muted">
                    <span class="flex-grow-1">
                        <span class="me-1">Assembly</span>
                        <span></span>
                    </span>
                    <button class="btn btn-lg pass fa fa-check px-0 text-success"></button>
                </li>
                <li class="o_mrp_record_line list-group-item d-flex justify-content-between align-items-center text-muted">
                    <span class="text-decoration-line-through">Register Production</span>
                    <span>T0001</span>
                </li>
                <li class="o_mrp_record_line list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-truncate">[FURN_8522] Table Top</span>
                    <button class="btn btn-sm text-nowrap btn-secondary">1<span class="ms-1">Unit</span>
                    </button>
                </li>
                <li class="o_mrp_record_line list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-truncate">[FURN_2333] Table Leg</span>
                    <button class="btn btn-sm text-nowrap btn-secondary">4<span class="ms-1">Units</span>
                    </button>
                </li>
            </ul>
            <div class="card-footer d-flex justify-content-between align-items-center test bg-white my-1 py-0 pe-0">
                <button class="btn btn-primary" barcode_trigger="cloMO">Close Production</button>
                <button class="btn btn-light py-3 px-4 ms-auto rounded-0 fa fa-ellipsis-v"></button>
            </div>
        </div>

    </template>
</odoo>